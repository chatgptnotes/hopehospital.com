# Hope Hospital Website - Environment Variables
# Copy this file to .env and fill in your actual values

# Contact Form Configuration
CONTACT_EMAIL=admin@hopehospital.com
CONTACT_PHONE=09373111709

# API Keys (if integrating third-party services)
# SENDGRID_API_KEY=your_sendgrid_key_here
# GOOGLE_MAPS_API_KEY=your_google_maps_key_here

# Analytics
# GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
# FACEBOOK_PIXEL_ID=your_pixel_id_here

# Deployment
NODE_ENV=production
PORT=3000

# Feature Flags
ENABLE_CONTACT_FORM=true
ENABLE_ANALYTICS=false

# Admin Credentials (for future admin panel)
# ADMIN_EMAIL=admin@hopehospital.com
# ADMIN_PASSWORD=change_this_password
